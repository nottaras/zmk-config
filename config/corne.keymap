#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    macros {
        lang_toggle: new_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp CAPSLOCK &tog 1>;
            label = "NEW_MACRO";
        };
    };

    behaviors {
        new_m: new_m {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_M";
            #binding-cells = <0>;
            bindings = <&kp M>, <&kp RIGHT_BRACKET>;
        };

        new_i: new_i {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_I";
            #binding-cells = <0>;
            bindings = <&kp I>, <&kp O>;
        };

        new_t: new_t {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_T";
            #binding-cells = <0>;
            bindings = <&kp T>, <&kp BACKSLASH>;
        };

        new_esc: new_esc {
            compatible = "zmk,behavior-hold-tap";
            label = "NEW_ESC";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "tap-preferred";
        };

        new_dot_comma: new_dot_comma {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_DOT_COMMA";
            #binding-cells = <0>;
            bindings = <&kp DOT>, <&kp COMMA>;
        };

        new_3: new_3 {
            compatible = "zmk,behavior-hold-tap";
            label = "NEW_3";
            bindings = <&mo>, <&tog>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
        };

        new_comma: new_comma {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_COMMA";
            #binding-cells = <0>;
            bindings = <&kp COMMA>, <&kp LS(COMMA)>;
        };

        new_dot: new_dot {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_DOT";
            #binding-cells = <0>;
            bindings = <&kp DOT>, <&kp LS(DOT)>;
        };

        new_semicolon: new_semicolon {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_SEMICOLON";
            #binding-cells = <0>;
            bindings = <&kp SEMI>, <&kp LS(SEMICOLON)>;
        };

        new_single_quote: new_single_quote {
            compatible = "zmk,behavior-tap-dance";
            label = "NEW_SINGLE_QUOTE";
            #binding-cells = <0>;
            bindings = <&kp SINGLE_QUOTE>, <&kp LS(SINGLE_QUOTE)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        en_layer {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp E             &kp R         &kp T        &kp Y      &kp U       &kp I       &kp O     &kp P              &kp BSPC
&kp LCTRL  &kp A  &kp S  &kp D             &kp F         &kp G        &kp H      &kp J       &kp K       &kp L     &new_semicolon     &kp LEFT_ALT
&kp LSHFT  &kp Z  &kp X  &kp C             &kp V         &kp B        &kp N      &kp M       &new_comma  &new_dot  &new_single_quote  &new_esc 4 ESC
                         &kp LEFT_COMMAND  &lang_toggle  &kp SPACE    &kp ENTER  &new_3 2 2  &new_3 3 3
            >;
        };

        ru_layer {
            bindings = <
&kp TAB         &kp Q  &kp W  &kp E             &kp R         &new_t       &kp Y      &kp U       &new_i      &kp LEFT_BRACKET  &kp P             &kp BACKSPACE
&kp LCTRL       &kp A  &kp S  &kp D             &kp F         &kp G        &kp H      &kp J       &kp K       &kp L             &kp SEMICOLON     &kp LEFT_ALT
&kp LEFT_SHIFT  &kp Z  &kp X  &kp C             &kp V         &kp B        &kp N      &new_m      &kp COMMA   &kp DOT           &kp SINGLE_QUOTE  &new_esc 4 ESC
                              &kp LEFT_COMMAND  &lang_toggle  &kp SPACE    &kp ENTER  &new_3 3 3  &new_3 2 2
            >;
        };

        sym_layer {
            bindings = <
&kp GRAVE  &kp EXCLAMATION  &kp EQUAL      &kp QUESTION    &kp AMPERSAND     &kp PIPE                &kp AT                 &kp HASH           &kp DOLLAR       &kp PERCENT       &kp CARET  &kp BSPC
&kp SLASH  &kp BACKSLASH    &kp LESS_THAN  &kp LEFT_BRACE  &kp LEFT_BRACKET  &kp LEFT_PARENTHESIS    &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACKET  &kp RIGHT_BRACE  &kp GREATER_THAN  &none      &none
&none      &kp TILDE        &kp STAR       &kp COLON       &kp UNDERSCORE    &kp MINUS               &none                  &none              &none            &none             &none      &none
                                           &kp KP_COMMA    &kp KP_DOT        &kp BACKSPACE           &kp ENTER              &to 3              &to 0
            >;
        };

        nav_num_layer {
            bindings = <
&kp TAB           &kp PLUS   &kp N7        &kp N8    &kp N9  &kp BACKSPACE     &kp PG_UP  &kp HOME  &kp UP_ARROW  &kp END    &none  &kp BSPC
&kp LEFT_CONTROL  &kp MINUS  &kp N4        &kp N5    &kp N6  &none             &kp PG_DN  &kp LEFT  &kp DOWN      &kp RIGHT  &none  &none
&kp LSHFT         &kp EQUAL  &kp NUMBER_1  &kp N2    &kp N3  &none             &none      &none     &none         &none      &none  &none
                                           &kp LGUI  &kp N0  &new_dot_comma    &kp ENTER  &to 0     &to 2
            >;
        };

        bt_layer {
            bindings = <
&none  &none          &none          &none          &none          &none            &none       &none       &none       &none  &none  &none
&none  &bt BT_SEL 0   &bt BT_SEL 1   &bt BT_SEL 2   &bt BT_SEL 3   &bt BT_SEL 4     &bt BT_PRV  &bt BT_NXT  &bt BT_CLR  &none  &none  &none
&none  &bt BT_DISC 0  &bt BT_DISC 1  &bt BT_DISC 2  &bt BT_DISC 3  &bt BT_DISC 4    &none       &none       &none       &none  &none  &none
                                     &none          &none          &none            &none       &none       &none
            >;
        };
    };
};
